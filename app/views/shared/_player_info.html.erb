<table class="table">
  <thead >
  <th style="text-align: center;">Info</th>
  </thead>
  <tbody>
  <tr>
    <td>
      Name: <%= @player.name %>
    </td>
  </tr>
  <% if current_player == @player %>
      <tr>
        <td>
          Email: <%= @player.email %>
        </td>
      </tr>
  <% end %>
  <tr>
    <td>
      Rating: <%= @player.rating %> pts.
    </td>
  </tr>
  </tbody>
</table>
<% if current_player == @player %>
    <%= button_to "Edit my info", edit_player_path(current_player), class: "Button", :method => :get %>
<% end %>