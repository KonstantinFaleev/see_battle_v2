<%= provide(:title, "Game ##{@game.id}") %>


<% if @game.game_over? %>
    <center><h3><%= @game.play_status %></h3></center>
<% else %>
    <center><h3>Game in progress...</h3></center>
<% end %>

<table class="board_container">
  <tr>
    <td>
      <table>
        <thead>
        <th colspan='10'><%= @game.player_a.name %></th>
        </thead>
        <tbody>
        <% for i in 0..9 %>
            <tr class="board">
              <% for j in 0..9 %>
                  <td class="board">
                    <% if @game.player_a_board[i][j] == 0 %>
                        <%= image_tag 'empty.png', :class => "style_img" %>
                    <% elsif @game.player_a_board[i][j] == 1 %>
                        <%= image_tag 'ship.png', :class => "style_img" %>
                    <% elsif @game.player_a_board[i][j] == 3 %>
                        <%= image_tag 'hit.png', :class => "style_img" %>
                    <% else %>
                        <%= image_tag 'miss.png', :class => "style_img" %>
                    <% end %>
                  </td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>
    </td>
    <td width="150"></td>
    <td>
      <table>
        <thead>
        <th colspan='10'><%= @game.player_b.name %></th>
        </thead>
        <tbody>
        <% for i in 0..9 %>
            <tr class="board">
              <% for j in 0..9 %>
                  <td class="board">
                    <% if @game.player_b_board[i][j] == 0 || @game.player_b_board[i][j] == 1 %>
                        <% cell = "#{i}_#{j}" %>
                        <%= link_to "/move/#{@game.id}/cell=#{cell}" do %>
                            <%= image_tag 'empty.png', :class => "style_img" %>
                        <% end %>
                    <% elsif @game.player_b_board[i][j] == 3 %>
                        <%= image_tag 'hit.png', :class => "style_img" %>
                    <% else %>
                        <%= image_tag 'miss.png', :class => "style_img" %>
                    <% end %>
                  </td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>
    </td>
  </tr>
</table>
<br>
<h4>Game Log:</h4>
<%= text_area_tag(:message, "#{@game.game_log}", readonly: true, size: "24x6") %>