<table class="board_container text-center">
  <thead>
  <th colspan='11' class="text-center">
    <% if game.player_a.deleted_at %>
        <%= game.player_a.name %>
    <% else %>
        <%= link_to game.player_a.name, game.player_a %>
    <% end %>
    <br />
    <small><%= game.player_a.rating %> pts.</small>
  </th>
  </thead>
  <tbody>
  <tr>
    <td></td>
    <% ('A'..'J').each do |i| %>
        <td><%= i %></td>
    <% end %>
  </tr>
  <% for i in 0..9 %>
      <tr>
        <td style="padding-right: 10px;"><%= i %></td>
        <% for j in 0..9 %>
            <td class="board">
              <% if game.player_a_board[i][j][0] == 0 %>
                  <%= image_tag '/transparent.png', :style => "width:28px;height:28px;" %>
              <% elsif game.player_a_board[i][j][0] == 1 %>
                  <%= image_tag '/transparent.png', :style => "width:25px;height:25px;border:3px solid black;" %>
              <% elsif game.player_a_board[i][j][0] == 3 %>
                  <div class="sunk">
                    &Chi;
                  </div>
              <% else %>
                  <div class="miss">
                    &bull;
                  </div>
              <% end %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>