<% if @game.game_over? %>
    <h4><%= @game.play_status %></h4>
<% end %>

<table class="board_container">
  <tr>
    <td>
      <div id="player_board">
        <%= render 'player_board' %>
      </div>
    </td>
    <td style="width: 25%;"><%= image_tag 'transparent.png', :class => "style_img" %></td>
    <td>
      <div id="bot_board">
        <%= render 'bot_board' %>
      </div>
    </td>
  </tr>
</table>
<br>
<h4>Game Log:</h4>
<%= text_area_tag(:message, "#{@game.game_log}", readonly: true, size: "24x6") %>