<header class="navbar navbar-inverse">
  <%= favicon_link_tag 'favicon.ico' %>
  <link rel="shortcut icon" href="assets/myicon.ico" type="image/x-icon" />
  <link rel="icon" type="image/png" href="assets/favicon.png" />
  <div class="navbar-inner">
    <div class="container">
      <div class="span2">
        <%= link_to root_path, id: "logo" do %>
            <%= image_tag 'logo.png', :class => "logo" %>
        <% end %>
      </div>
      <nav>
        <ul class="nav">
          <li style="height: 30px">
            <%= render "layouts/inline_signin" %>
          </li>
        </ul>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
              <li><%= link_to "Players", players_path, :rel => "external" %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  My Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to current_player do %>
                        <i class="icon-user"></i> Profile
                    <% end %>
                  </li>
                  <li>
                    <%= link_to edit_player_path(current_player) do %>
                        <i class="icon-wrench"></i> Settings
                    <% end %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to signout_path, method: "delete" do %>
                        <i class="icon-off"></i> Sign out
                    <% end %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>