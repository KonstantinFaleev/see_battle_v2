<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "logo place", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
              <li><%= link_to "Players", players_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  My Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to current_player do %>
                        <i class="icon-user"></i> Profile
                    <% end %>
                  </li>
                  <li>
                    <%= link_to edit_player_path(current_player) do %>
                        <i class="icon-wrench"></i> Settings
                    <% end %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to signout_path, method: "delete" do %>
                        <i class="icon-off"></i> Sign out
                    <% end %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>