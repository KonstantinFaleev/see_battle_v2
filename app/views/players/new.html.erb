<% provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@player) do |f| %>

        <%= render 'fields', f: f %>

        <%= f.submit "Register", class: "Button" %>

    <% end %>
  </div>
</div>

<p>Already a user? <%= link_to "Sign in.", root_path %></p>