<%= provide(:title, "#{@player.name}") %>
<% if current_player == @player %>
    <h1>My profile</h1>
<% else %>
    <h1><%= @player.name %> profile</h1>
<% end %>
<p>Name: <%= @player.name %> </p>
<p>Rating: <%= @player.rating %> pts. </p>
<%= button_to "Play new game", games_path, class: "Button", :method => :post %>